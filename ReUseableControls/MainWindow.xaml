<Window
    x:Class="ReUseableControls.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReUseableControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="48"
            Text="Tiers" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                MaxWidth="200"
                Margin="20,50,0,0"
                HorizontalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Rectangle
                    Grid.Row="0"
                    Width="150"
                    Height="150"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="Yellow"
                    Stroke="Black" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    FontSize="16"
                    Text="The most basic tier." />

                <Button
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    Click="OnJoinBasicClicked"
                    Content="Join"
                    FontSize="16" />

            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                MaxWidth="200"
                Margin="20,50,0,0"
                HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Rectangle
                    Grid.Row="0"
                    Width="150"
                    Height="150"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="Yellow"
                    Stroke="Black" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    FontSize="16"
                    Text="The most basic tier." />

                <Button
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    Click="OnJoinProClicked"
                    Content="Join"
                    FontSize="16" />
            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="3"
                MaxWidth="200"
                Margin="20,50,0,0"
                HorizontalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Rectangle
                    Grid.Row="0"
                    Width="150"
                    Height="150"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="Yellow"
                    Stroke="Black" />

                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    FontSize="16"
                    Text="The most Enterprise tier." />

                <Button
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    Click="OnJoinEnterpriseClicked"
                    Content="Join"
                    FontSize="16" />
            </Grid>
        </Grid>

    </Grid>
</Window>

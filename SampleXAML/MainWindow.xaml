<Window x:Class="SampleXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DarkGreen">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Hello, this is a TextBlock in the MainWindow!" FontSize="24" HorizontalAlignment="Center" Padding="10" Background="DarkGoldenrod"/>
            <local:TextUserControl Padding="10" ControlText="This is some Custom Text set outside"/>
        </StackPanel>
    </Grid>
</Window>
